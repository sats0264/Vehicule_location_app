<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="640.0" prefWidth="1000.0" style="-fx-background-color: #f8f8f8;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="location.app.vehicule_location_app.controllers.UIClientController">
    <children>
        <HBox layoutX="20.0" layoutY="20.0" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <!-- Left Section: Gestion clients (VBox holding GridPane and Buttons) -->
            <VBox prefWidth="450.0" spacing="15.0" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;" HBox.hgrow="ALWAYS">
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <children>
                            <Label text="Gestion clients" textFill="#424242">
                                <font>
                                    <Font name="System Bold" size="18.0" />
                                </font>
                            </Label>
                            <Region HBox.hgrow="ALWAYS" />
                            <!-- Action Buttons for Gestion clients -->
                            <Button fx:id="plusButton" contentDisplay="GRAPHIC_ONLY" onAction="#handlePlusButton" style="-fx-background-color: transparent;">
                                <graphic>
                                    <ImageView fitHeight="24.0" fitWidth="24.0">
                                        <image>
                                            <Image url="@../images/plus_icon.png" />
                                        </image>
                                    </ImageView>
                                </graphic>
                            </Button>
                            <Button fx:id="refreshButton" contentDisplay="GRAPHIC_ONLY" onAction="#handleRefreshButton" style="-fx-background-color: transparent;">
                                <graphic>
                                    <ImageView fitHeight="24.0" fitWidth="24.0">
                                        <image>
                                            <Image url="@../images/refresh_icon.png" />
                                        </image>
                                    </ImageView>
                                </graphic>
                            </Button>
                            <Button fx:id="searchButton" contentDisplay="GRAPHIC_ONLY" onAction="#handleSearchButton" style="-fx-background-color: transparent;">
                                <graphic>
                                    <ImageView fitHeight="24.0" fitWidth="24.0">
                                        <image>
                                            <Image url="@../images/search_icon.png" />
                                        </image>
                                    </ImageView>
                                </graphic>
                            </Button>
                            <Button fx:id="deleteEntryButton" contentDisplay="GRAPHIC_ONLY" onAction="#handleDeleteEntryButton" style="-fx-background-color: transparent;">
                                <graphic>
                                    <ImageView fitHeight="24.0" fitWidth="24.0">
                                        <image>
                                            <Image url="@../images/delete_icon.png" />
                                        </image>
                                    </ImageView>
                                </graphic>
                            </Button>
                            <Button fx:id="folderButton" contentDisplay="GRAPHIC_ONLY" onAction="#handleFolderButton" style="-fx-background-color: transparent;">
                                <graphic>
                                    <ImageView fitHeight="24.0" fitWidth="24.0">
                                        <image>
                                            <Image url="@../images/folder_icon.png" />
                                        </image>
                                    </ImageView>
                                </graphic>
                            </Button>
                        </children>
                    </HBox>

                    <VBox spacing="10.0">
                        <children>
                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <Label prefWidth="80.0" text="CIN :" />
                                <TextField fx:id="cinField" HBox.hgrow="ALWAYS" />
                            </HBox>
                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <Label prefWidth="80.0" text="Permis :" />
                                <TextField fx:id="permisField" HBox.hgrow="ALWAYS" />
                            </HBox>
                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <Label prefWidth="80.0" text="Prénom :" />
                                <TextField fx:id="prenomField" HBox.hgrow="ALWAYS" />
                            </HBox>
                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <Label prefWidth="80.0" text="Nom :" />
                                <TextField fx:id="nomField" HBox.hgrow="ALWAYS" />
                            </HBox>
                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <Label prefWidth="80.0" text="Sexe :" />
                                <ComboBox fx:id="sexeComboBox" prefWidth="150.0" HBox.hgrow="ALWAYS" />
                            </HBox>
                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <Label prefWidth="80.0" text="Adresse :" />
                                <TextField fx:id="adresseField" HBox.hgrow="ALWAYS" />
                            </HBox>
                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <Label prefWidth="80.0" text="Téléphone :" />
                                <TextField fx:id="telephoneField" HBox.hgrow="ALWAYS" />
                            </HBox>
                            <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <Label prefWidth="80.0" text="Email :" />
                                <TextField fx:id="emailField" HBox.hgrow="ALWAYS" />
                            </HBox>
                        </children>
                    </VBox>

                    <HBox alignment="CENTER" spacing="10.0">
                        <!-- Navigation Buttons -->
                        <Button fx:id="firstButton" contentDisplay="GRAPHIC_ONLY" onAction="#handleFirstButton" style="-fx-background-color: transparent;">
                            <graphic>
                                <ImageView fitHeight="20.0" fitWidth="20.0">
                                    <image>
                                        <Image url="@../images/arrow_double_left.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="previousButton" contentDisplay="GRAPHIC_ONLY" onAction="#handlePreviousButton" style="-fx-background-color: transparent;">
                            <graphic>
                                <ImageView fitHeight="20.0" fitWidth="20.0">
                                    <image>
                                        <Image url="@../images/arrow_left.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="nextButton" contentDisplay="GRAPHIC_ONLY" onAction="#handleNextButton" style="-fx-background-color: transparent;">
                            <graphic>
                                <ImageView fitHeight="20.0" fitWidth="20.0">
                                    <image>
                                        <Image url="@../images/arrow_right.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="lastButton" contentDisplay="GRAPHIC_ONLY" onAction="#handleLastButton" style="-fx-background-color: transparent;">
                            <graphic>
                                <ImageView fitHeight="20.0" fitWidth="20.0">
                                    <image>
                                        <Image url="@../images/arrow_double_right.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </HBox>

                    <HBox alignment="CENTER" spacing="10.0">
                        <Button fx:id="enregistrerButton" onAction="#handleEnregistrer" style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;" text="Enregistrer">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                        <Button fx:id="supprimerButton" onAction="#handleSupprimer" style="-fx-background-color: #e91e63; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;" text="Supprimer">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                    </HBox>
                </children>
            </VBox>

            <!-- Right Section: Liste clients (VBox holding Label and TableView) -->
            <VBox prefWidth="600.0" spacing="10.0" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;" HBox.hgrow="ALWAYS">
                <children>
                    <Label text="Liste clients" textFill="#424242">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Label>
                    <TableView fx:id="clientsTable" prefHeight="500.0" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="cinColumn" prefWidth="80.0" text="CIN" />
                            <TableColumn fx:id="permisColumn" prefWidth="80.0" text="Permis" />
                            <TableColumn fx:id="prenomColumn" prefWidth="100.0" text="Prénom" />
                            <TableColumn fx:id="nomColumn" prefWidth="100.0" text="Nom" />
                            <TableColumn fx:id="sexeColumn" prefWidth="60.0" text="Sexe" />
                            <TableColumn fx:id="telephoneColumn" prefWidth="100.0" text="Téléphone" />
                            <TableColumn fx:id="emailColumn" prefWidth="150.0" text="Email" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </children>
            </VBox>
        </HBox>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="350.0" spacing="20.0" style="-fx-background-color: #f4f4f4; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-border-radius: 8;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="location.app.vehicule_location_app.controllers.UILoginController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    <children>
        <Label text="Connexion" textFill="#333333">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
        <VBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="Nom d'utilisateur ou Email :" textFill="#555555">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="usernameField" promptText="Entrez votre nom d'utilisateur ou email" style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 8;" />
            </children>
        </VBox>
        <VBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="Mot de passe :" textFill="#555555">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe" style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 8;" />
            </children>
        </VBox>
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="cancelButton" onAction="#handleCancelButton" prefWidth="120.0" style="-fx-background-color: #e0e0e0; -fx-text-fill: #333333; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;" text="Annuler">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="loginButton" onAction="#handleLoginButton" prefWidth="120.0" style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;" text="Connexion">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>
        <Hyperlink fx:id="createAccountLink" onAction="#handleCreateAccountLink" text="Vous n'avez pas de compte? CrÃ©er en un" textFill="#2196f3">
            <font>
                <Font size="13.0" />
            </font>
        </Hyperlink>
    </children>
</VBox>

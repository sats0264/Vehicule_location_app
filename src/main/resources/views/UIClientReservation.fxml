<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="location.app.vehicule_location_app.controllers.UIClientReservationController">
    <VBox alignment="CENTER" layoutY="6.0" prefHeight="487.0" prefWidth="360.0" spacing="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="6.0">
        <ImageView fx:id="imageView" fitHeight="180" fitWidth="270" preserveRatio="true">
         <image>
            <Image url="@../images/car_logo.png" />
         </image></ImageView>
        <Label fx:id="marqueLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        <Label fx:id="modeleLabel" style="-fx-font-size: 14px;" />
        <Label fx:id="immatriculationLabel" style="-fx-font-size: 14px;" />
        <Label fx:id="typeReservationLabel" style="-fx-font-size: 13px; -fx-text-fill: #2196f3;" />
        <Label fx:id="prixLabel" style="-fx-font-size: 15px; -fx-font-weight: bold;" />
        <HBox alignment="CENTER" spacing="10">
            <Label text="Date début:" />
            <DatePicker fx:id="dateDebutPicker" />
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <Label text="Date fin:" />
            <DatePicker fx:id="dateFinPicker" />
        </HBox>
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="validerBtn" style="-fx-background-color: #2196f3; -fx-text-fill: white;" text="Valider la réservation" />
            <Button fx:id="annulerBtn" style="-fx-background-color: #e53935; -fx-text-fill: white;" text="Annuler" />
        </HBox>
    </VBox>
</AnchorPane>

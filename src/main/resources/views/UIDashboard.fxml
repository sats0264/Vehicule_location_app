<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="640.0" prefWidth="1000.0" style="-fx-background-color: #f8f8f8;"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="location.app.vehicule_location_app.controllers.UIDashboardController">
    <HBox alignment="CENTER" layoutX="20.0" layoutY="20.0" prefWidth="1040.0" spacing="40.0"
          AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <VBox alignment="CENTER" prefHeight="120.0" prefWidth="280.0"
              style="-fx-background-color: #e0f2f1; -fx-background-radius: 8; -fx-padding: 15;">
            <Label text="CHIFFRE D'AFFAIRES" textFill="#26a69a">
                <font>
                    <Font name="System Bold" size="16.0"/>
                </font>
            </Label>
            <HBox alignment="CENTER" spacing="10.0">
                <Label fx:id="chiffreAffairesLabel" text="301100 DH" textFill="#26a69a">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/money_icon.png"/>
                </ImageView>
            </HBox>
        </VBox>

        <VBox alignment="CENTER" prefHeight="120.0" prefWidth="280.0"
              style="-fx-background-color: #e3f2fd; -fx-background-radius: 8; -fx-padding: 15;">
            <Label text="VOITURES" textFill="#2196f3">
                <font>
                    <Font name="System Bold" size="16.0"/>
                </font>
            </Label>
            <HBox alignment="CENTER" spacing="10.0">
                <Label fx:id="voituresCountLabel" text="23" textFill="#2196f3">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/car_dashboard_icon.png"/>
                </ImageView>
            </HBox>
        </VBox>

        <VBox alignment="CENTER" prefHeight="120.0" prefWidth="280.0"
              style="-fx-background-color: #ede7f6; -fx-background-radius: 8; -fx-padding: 15;">
            <Label text="CLIENTS" textFill="#9c27b0">
                <font>
                    <Font name="System Bold" size="16.0"/>
                </font>
            </Label>
            <HBox alignment="CENTER" spacing="10.0">
                <Label fx:id="clientsCountLabel" text="17" textFill="#9c27b0">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/clients_icon.png"/>
                </ImageView>
            </HBox>
        </VBox>
    </HBox>

    <Separator layoutX="20.0" layoutY="180.0" prefWidth="1040.0" AnchorPane.leftAnchor="20.0"
               AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="180.0"/>

    <HBox alignment="TOP_CENTER" layoutX="20.0" layoutY="220.0" prefWidth="1040.0" spacing="40.0"
          AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
          AnchorPane.topAnchor="220.0">
        <VBox prefWidth="500.0" spacing="10.0"
              style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1;"
              HBox.hgrow="ALWAYS">
            <Label text="VOITURES ACTUELLEMENT RESERVÉES" textFill="#424242">
                <font>
                    <Font name="System Bold" size="16.0"/>
                </font>
            </Label>
            <TableView fx:id="reservedCarsTable" prefHeight="350.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="resMatriculeColumn" prefWidth="100.0" text="Matricule"/>
                    <TableColumn fx:id="resCountColumn" prefWidth="50.0" text="N"/>
                    <TableColumn fx:id="resStartDateColumn" prefWidth="120.0" text="Date Début"/>
                    <TableColumn fx:id="resEndDateColumn" prefWidth="120.0" text="Date Fin"/>
                    <TableColumn fx:id="resClientNameColumn" prefWidth="120.0" text="Client"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>

        <VBox prefWidth="500.0" spacing="10.0"
              style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1;"
              HBox.hgrow="ALWAYS">
            <Label text="5 MEILLEURS CLIENTS" textFill="#424242">
                <font>
                    <Font name="System Bold" size="16.0"/>
                </font>
            </Label>
            <TableView fx:id="topClientsTable" prefHeight="350.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="topClientFirstNameColumn" prefWidth="120.0" text="Prénom"/>
                    <TableColumn fx:id="topClientLastNameColumn" prefWidth="120.0" text="Nom"/>
                    <TableColumn fx:id="topClientFideliteColumn" prefWidth="120.0" text="Fidelité"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </HBox>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="640.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="location.app.vehicule_location_app.controllers.UIVehiculeController">

    <HBox prefHeight="640.0" prefWidth="1000.0" spacing="20.0" style="-fx-padding: 20;">

        <VBox prefHeight="571.0" prefWidth="960.0" spacing="10.0" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;" HBox.hgrow="ALWAYS">
            <Label text="Liste voitures" textFill="#424242">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <TableView fx:id="voituresTable" prefHeight="500.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="immatriculeColumn" prefWidth="100.0" text="Immatricule" />
                    <TableColumn fx:id="tarifColumn" prefWidth="120.0" text="Tarif en FCFA" />
                    <TableColumn fx:id="marqueColumn" prefWidth="100.0" text="Marque" />
                    <TableColumn fx:id="modeleColumn" prefWidth="100.0" text="ModÃ¨le" />
                    <TableColumn fx:id="photoColumn" prefWidth="100.0" text="URL Photo" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
         <HBox alignment="CENTER_RIGHT" spacing="20.0" style="-fx-padding: 10;">
            <children>
                <Button fx:id="addButton" onAction="#handleAddVehicule" style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;" text="Ajouter">
                    <font>
                         <Font size="14.0" />
                    </font>
                </Button>
               <Button fx:id="detailButton" onAction="#handleDetailVehicule" style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;" text="Details">
                    <font>
                         <Font size="14.0" />
                    </font>
                </Button>
            </children>
         </HBox>
        </VBox>
    </HBox>
</AnchorPane>

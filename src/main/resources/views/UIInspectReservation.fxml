<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="574.0" prefWidth="989.0" style="-fx-background-color: #f8f8f8;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="location.app.vehicule_location_app.controllers.UIInspectReservationController">
    <children>
        <!-- Informations client & Informations voiture sections -->
        <HBox layoutX="20.0" layoutY="34.0" prefHeight="243.0" prefWidth="949.0" spacing="40.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="34.0">
            <!-- Informations client -->
            <VBox prefHeight="250.0" prefWidth="464.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1;" HBox.hgrow="ALWAYS">
                <children>
                    <Label text="Informations client" textFill="#424242">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Label>
                    <Separator />
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label prefWidth="80.0" text="Nom :" />
                        <TextField fx:id="clientLastNameField" editable="false" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label prefWidth="80.0" text="Prénom :" />
                        <TextField fx:id="clientFirstNameField" editable="false" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label prefWidth="80.0" text="Téléphone :" />
                        <TextField fx:id="clientPhoneField" editable="false" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label prefWidth="80.0" text="Email :" />
                        <TextField fx:id="clientEmailField" editable="false" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label prefWidth="80.0" text="Fidelite :" />
                        <TextField fx:id="clientAddressField" editable="false" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                    </HBox>
                </children>
            </VBox>

            <!-- Informations voiture -->
            <VBox prefWidth="482.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1;" HBox.hgrow="ALWAYS">
                <children>
                    <Label text="Informations voiture" textFill="#424242">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Label>
                    <Separator />
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label prefWidth="80.0" text="Immatriculation :" />
<!--                        <TextField fx:id="voitureImmatriculationField" editable="false" prefWidth="200.0" HBox.hgrow="ALWAYS" />-->
                        <ComboBox fx:id="voitureImmatriculationField" editable="false" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label prefWidth="80.0" text="Modèle :" />
                        <TextField fx:id="voitureModeleField" editable="false" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label prefWidth="80.0" text="Marque :" />
                        <TextField fx:id="voitureMarqueField" editable="false" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label prefWidth="80.0" text="Tarif :" />
                        <TextField fx:id="voitureTarifField" editable="false" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label prefWidth="80.0" text="Statut :" />
                        <TextField fx:id="voitureStatutField" editable="false" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                    </HBox>
                </children>
            </VBox>
        </HBox>

        <!-- Informations chauffeur & Information duree section -->
        <HBox layoutX="20.0" layoutY="301.0" prefHeight="177.0" prefWidth="949.0" spacing="40.0">
            <!-- Iformation chauffeur section     -->
            <VBox layoutX="20.0" layoutY="298.0" prefHeight="177.0" prefWidth="495.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1;" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="298.0">
                <children>
                    <Label text="Informations chauffeur" textFill="#424242">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Label>
                    <Separator />
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label prefWidth="80.0" text="Chauffeur ID :" />
                        <ComboBox fx:id="chauffeurIdComboBox" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label prefWidth="80.0" text="Nom :" />
                        <TextField fx:id="chauffeurLastNameField" editable="false" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label prefWidth="80.0" text="Prénom :" />
                        <TextField fx:id="chauffeurFirstNameField" editable="false" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label prefWidth="80.0" text="Statut :" />
                        <TextField fx:id="chauffeurStatutField" editable="false" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                    </HBox>
                </children>
            </VBox>
            <!-- Informations duree section -->
            <VBox layoutX="524.0" layoutY="298.0" prefHeight="177.0" prefWidth="513.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1;" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="298.0">
                <children>
                    <Label text="Informations durée" textFill="#424242">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Label>
                    <Separator />
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label prefWidth="80.0" text="Date de début :" />
                        <DatePicker fx:id="startDatePicker" editable="false" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label prefWidth="80.0" text="Date de fin :" />
                        <DatePicker fx:id="endDatePicker" editable="false" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label prefWidth="80.0" text="Durée :" />
                        <TextField fx:id="durationField" editable="false" prefWidth="200.0" text="37 jour(s)" HBox.hgrow="ALWAYS" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label prefWidth="80.0" text="Montant :" />
                        <TextField fx:id="amountField" editable="false" prefWidth="200.0" text="11100 DH" HBox.hgrow="ALWAYS" />
                    </HBox>
                </children>
            </VBox>
        </HBox>
        <HBox alignment="CENTER" layoutX="149.0" layoutY="524.0" spacing="10.0" AnchorPane.leftAnchor="149.0" AnchorPane.rightAnchor="151.0">
              <Button fx:id="approuverButton" onAction="#handleApprouver" style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;" text="Approuver">
                  <font>
                      <Font size="14.0" />
                  </font>
              </Button>
         <Region prefHeight="0.0" prefWidth="200.0" />
              <Button fx:id="rejeterButton" onAction="#handleRejeter" style="-fx-background-color: #e91e63; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;" text="Rejeter">
                  <font>
                      <Font size="14.0" />
                  </font>
              </Button>
          </HBox>
      <Label layoutX="309.0" layoutY="-5.0" text="Informations de la reservation" textFill="#424242">
         <font>
            <Font name="System Bold" size="26.0" />
         </font>
      </Label>
